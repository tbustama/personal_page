<% if current_user %>
    <h1>Add Post</h1>
    <%= form_for :post, url: posts_path do |f|%>
        <% if @post.errors.any? %>
            <% @post.errors.full_messages.each do |msg|%>
                <div class="alert alert-danger"><%= msg%></div>
            <% end %>
        <% end %>
        <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :body %><br>
            <%= f.text_area :body%>
        </p>

        <p>
            <%= f.submit({:class => 'btn'})%>
        </p>
    <% end %>
<% else %>
    <h1>ACCESS DENIED</h1>
<% end %>
